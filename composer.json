{
    "name": "tutorial/docker-php-mysql",
    "description": "Tutorial educativo de Docker con PHP y MySQL",
    "type": "project",
    "keywords": ["docker", "php", "mysql", "tutorial", "educational"],
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "vlucas/phpdotenv": "^5.5"
    },
    "require-dev": {
        "symfony/var-dumper": "^6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
